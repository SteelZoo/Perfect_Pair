<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.PerfectPair" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/bluelagoo_mid</item>
    </style>

    <style name="Theme.PerfectPair" parent="Base.Theme.PerfectPair" />

    <style name="Theme.PerfectPair.NormalButton" parent="Theme.PerfectPair">
        <item name="android:background">@drawable/bg_btn_normal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.PerfectPair.RankText" parent="Theme.PerfectPair">
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">@font/font_jamsil_4_midium_res</item>
    </style>

    <style name="Theme.PerfectPair.QuestionEditText" parent="Theme.PerfectPair">
        <item name="android:inputType">text</item>
        <item name="android:maxLength">20</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_jamsil_3_regular_res</item>
    </style>

    <style name="ToolBarText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/font_jamsil_3_regular_res</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>